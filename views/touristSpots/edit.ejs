<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit <%=touristSpot.title %></h1>
    <div class="col-md-6 offset-md-3">
        <form action="/touristSpots/<%=touristSpot._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="touristSpot[title]"
                    value="<%=touristSpot.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="touristSpot[location]"
                    value="<%=touristSpot.location %>" required>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="touristSpot[price]" value="<%=touristSpot.price %>"
                        required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="touristSpot[description]" rows="5"
                    required><%= touristSpot.description%></textarea>
            </div>

            <div class="mb-3">
                <% touristSpot.images.forEach(function(img, i){ %>
                <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail" crossorigin>
                <div class="form-check-inline">
                    <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= img.filename %>">
                </div>
                <label for="image-<%= i %>">Delete</label>
                <% }) %>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Tourist Spot</button>
            </div>
        </form>
        <a href="/touristSpots/<%=touristSpot._id%>">Back To <%= touristSpot.title %></a>

    </div>
</div>