<% layout("layouts/boilerplate") %>

<div id="cluster-map"></div>

<h1>All TouristSpots</h1>
<div>
    <a href="/touristSpots/new">Add TouristSpot</a>
</div>

<% for (let touristSpot of touristSpots){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(touristSpot.images.length){ %>
            <img class="img-fluid" alt="" src="<%=touristSpot.images[0].url %>" crossorigin>
            <% }else{ %>
            <img class="img-fluid" alt="" src="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= touristSpot.title %></h5>
                <p class="card-text"><%= touristSpot.description %></p>
                <p class="card-text"><small class="text-muted"><%= touristSpot.location %></small></p>
                <a class="btn btn-primary" href="/touristSpots/<%= touristSpot._id %>">View <%= touristSpot.title %></a>
            </div>
        </div>
    </div>
</div>
<% }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const touristSpots = { features: <%- JSON.stringify(touristSpots) %>}
</script>

<script src="javascripts/clusterMap.js"></script>